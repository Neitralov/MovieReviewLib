@inject NavigationManager NavigationManager

<input class="h-[50px] mx-[25px] bg-neutral-200 text-neutral-600 placeholder-neutral-500 dark:bg-neutral-800 dark:text-neutral-100 dark:placeholder-neutral-400 w-full indent-[20px] rounded-[5px] text-[16px] bold"
       type="text"
       placeholder="Введите название фильма..."
       @bind="Name"
       @bind:event="oninput"
       @bind:after="FindMovie"/>

@code {

    private string? Name { get; set; }

    private void FindMovie()
    {
        NavigationManager.NavigateTo(string.IsNullOrWhiteSpace(Name)
            ? "/"
            : $"/FoundMovies/?Name={Name?.Trim()}");
    }
    
    public void ClearSearchLine()
    {
        Name = string.Empty;
        StateHasChanged();
    }

}