@if (CurrentScore >= Index)
{
    <img class="data-panel__star" src="icons/star.svg" alt="Тут звезда" @onclick="() => GetIndex.InvokeAsync(Index)"/>    
}
else
{
    <img class="data-panel__star" src="icons/emptyStar.svg" alt="Тут звезда" @onclick="() => GetIndex.InvokeAsync(Index)"/>        
}

@code {

    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public int CurrentScore { get; set; }

    [Parameter]
    public EventCallback<int> GetIndex { get; set; }
}