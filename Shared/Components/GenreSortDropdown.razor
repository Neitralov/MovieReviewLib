@inject DatabaseContext DatabaseContext

<span class="text-[16px] font-bold text-neutral-400">Жанр: </span>
<InputSelect class="text-[16px] font-bold text-white bg-neutral-900 cursor-pointer py-[1px] px-[5px] ml-[5px] mr-[10px] rounded-[5px]" @bind-Value="Genre" @onclick="() => GenreChanged.InvokeAsync(Genre)">
    <option value="all">любой</option>
    @foreach (var genre in DatabaseContext.Movies.SelectMany(movie => movie.Genres).Select(genre => genre.Value).Distinct().AsEnumerable().Order())
    {
        <option value="@genre">@genre.ToLower()</option>
    }
</InputSelect>

@code {

    [Parameter]
    public string Genre { get; set; } = "all";

    [Parameter]
    public EventCallback<string> GenreChanged { get; set; }

}