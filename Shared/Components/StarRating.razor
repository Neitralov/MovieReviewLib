    <defs>
        <symbol id="star" viewBox="0 0 32 32">
            <path d="M31.547 12a.848.848 0 00-.677-.577l-9.427-1.376-4.224-8.532a.847.847 0 00-1.516 0l-4.218 8.534-9.427 1.355a.847.847 0 00-.467 1.467l6.823 6.664-1.612 9.375a.847.847 0 001.23.893l8.428-4.434 8.432 4.432a.847.847 0 001.229-.894l-1.615-9.373 6.822-6.665a.845.845 0 00.214-.869z"/>
        </symbol>
        <symbol id="half-star" viewBox="0 0 16 32">
            <path d="M31.547 12a.848.848 0 00-.677-.577l-9.427-1.376-4.224-8.532a.847.847 0 00-1.516 0l-4.218 8.534-9.427 1.355a.847.847 0 00-.467 1.467l6.823 6.664-1.612 9.375a.847.847 0 001.23.893l8.428-4.434 8.432 4.432a.847.847 0 001.229-.894l-1.615-9.373 6.822-6.665a.845.845 0 00.214-.869z"/>
        </symbol>
    </defs>
</svg>

<div class="flex items-center">
    @for (var index = 1; index <= Score; index += 2)
    {
        if (index == Score && index % 2 != 0)
        {
            <svg width="@(Size / 2 + Spacing)" height="@Size" viewBox="0 0 16 32" fill="#DBCB3A">
                <use xlink:href="#half-star"/>
            </svg>
        }
        else
        {
            <svg width="@(Size + Spacing)" height="@Size" viewBox="0 0 32 32" fill="#DBCB3A">
                <use xlink:href="#star"/>
            </svg>
        }
    }
</div>

@code {

    [Parameter]
    public int? Score { get; set; }

    [Parameter]
    public int Size { get; set; }

    [Parameter]
    public int Spacing { get; set; }

}