<div class="grid__item" style="background: url('@PosterPath'); background-size: cover; background-position: center; cursor: pointer" @onclick="() => OpenInMovieEditor.InvokeAsync(Id)">
    <h1 class="grid__title">@Name</h1>
    <div class="grid__container">
        <h2 class="grid__year">@ReleaseYear</h2>
        <StarRating Score="Score" Size="14" Spacing="2"/>
    </div>
</div>

@code {

    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string PosterPath { get; set; } = string.Empty;

    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public int? ReleaseYear { get; set; }

    [Parameter]
    public int? Score { get; set; }

    [Parameter]
    public EventCallback<int> OpenInMovieEditor { get; set; }

}