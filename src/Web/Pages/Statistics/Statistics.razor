@code {
    private string GetDaysFromHours(int hours)
    {
        string GetEndingOfTheDay(int days)
        {
            var lastDigitOfDays = days % 10;
            return lastDigitOfDays switch
            {
                1           => "день",
                2 or 3 or 4 => "дня",
                _           => "дней"
            };
        }

        var days = hours / 24;

        return $"{days} {GetEndingOfTheDay(days)}";
    }
}