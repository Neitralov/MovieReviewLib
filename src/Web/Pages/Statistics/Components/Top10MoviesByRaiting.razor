<details class="bg-neutral-200 dark:bg-neutral-900 rounded-[5px] mb-[5px]">
    <summary class="text-[16px] font-bold text-neutral-950 dark:text-white py-[5px] px-[10px]">
        @Label
    </summary>
    <div class="p-[10px]">
        <ol>
            @for (var i = 0; i < 10; i++)
            {
                @if (i < MovieTitleWithScoreDtos.Length)
                {
                    <li class="text-[16px] font-bold text-neutral-600 dark:text-neutral-400 bg-neutral-100 dark:bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px] list-inside">
                        @MovieTitleWithScoreDtos[i].Title (@MovieTitleWithScoreDtos[i].Score)
                    </li>
                }
                else
                {
                    <li class="text-[16px] font-bold text-neutral-600 dark:text-neutral-400 bg-neutral-100 dark:bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px] list-inside">
                        N/A
                    </li>
                }
            }
        </ol>
    </div>
</details>

@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public MovieTitleWithScoreDto[] MovieTitleWithScoreDtos { get; set; } = null!;
}