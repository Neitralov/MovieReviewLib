<span class="text-[16px] font-bold text-neutral-600 dark:text-neutral-400">Сортировка: </span>
<InputSelect class="text-[16px] font-bold text-neutral-950 dark:text-white bg-neutral-200 dark:bg-neutral-900 cursor-pointer py-[1px] px-[5px] ml-[5px] mr-[10px] rounded-[5px]" @bind-Value="SortType" @onclick="UpdateCurrentSortType">
    <option value="@SortType.None">отсутствует</option>
    <option value="@SortType.FromNewToOld">сначала новые</option>
    <option value="@SortType.FromOldToNew">сначала старые</option>
    <option value="@SortType.ByDescendingRating">сначала с высоким рейтингом</option>
    <option value="@SortType.ByIncreasingRating">сначала с низким рейтингом</option>
    <option value="@SortType.AlphabeticalOrder">в алфавитном порядке</option>
    <option value="@SortType.ReverseAlphabeticalOrder">в обратном алфавитном порядке</option>
    <option value="@SortType.FromShortToLong">сначала короткие</option>
    <option value="@SortType.FromLongToShort">сначала длинные</option>
</InputSelect>

@code {
    [Parameter]
    public SortType SortType { get; set; }

    [Parameter]
    public EventCallback<SortType> SortTypeChanged { get; set; }

    [Parameter]
    public EventCallback OnSortTypeUpdate { get; set; }

    private async Task UpdateCurrentSortType()
    {
        await SortTypeChanged.InvokeAsync(SortType);
        await OnSortTypeUpdate.InvokeAsync();
    }
}