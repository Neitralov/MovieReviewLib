<button
    class="bg-red-500 hover:bg-red-600 dark:bg-red-800 dark:hover:bg-red-900 cursor-pointer text-white text-[16px] font-bold rounded-[5px] py-[5px] px-[10px]"
    @onclick="OnClick">
    @Label
</button>

@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnClick { get; set; }
}