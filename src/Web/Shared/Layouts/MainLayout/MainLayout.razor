@inherits LayoutComponentBase

<div class="flex flex-col min-h-full overflow-hidden">
    <Header @ref="Header"></Header>
    <Nav OnPageChanged="() => Header?.SearchLine?.ClearSearchLine()"></Nav>
    <main class="bg-neutral-100 dark:bg-neutral-800 grow py-[20px] px-[50px] flex flex-col overflow-y-scroll h-[calc(100vh-165px)]">
        @Body
    </main>
    <Footer></Footer>
</div>

@code {
    private Header? Header { get; set; }
}