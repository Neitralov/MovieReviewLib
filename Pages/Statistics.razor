    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">
        @(NewestWatchedSeries is not null ? NewestWatchedSeries.Name : "N/A")
    </p>
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Самое современное просмотренное шоу</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">
        @(NewestWatchedShow is not null ? NewestWatchedShow.Name : "N/A")
    </p>
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Самый современный просмотренный мультфильм</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">
        @(NewestWatchedCartoon is not null ? NewestWatchedCartoon.Name : "N/A")
    </p>
</div>

<div class="mb-[20px]">
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Самый старый просмотренный фильм</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">
        @(OldestWatchedFilm is not null ? OldestWatchedFilm.Name : "N/A")
