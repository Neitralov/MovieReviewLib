@page "/Statistics"
@inject DatabaseContext DatabaseContext

<PageTitle>Статистика</PageTitle>

<div class="mb-[20px]">
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Количество просмотренных произведений</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">@NumberOfWatchedMovies</p>

    <details class="bg-neutral-900 rounded-[5px] mb-[5px]">
        <summary class="text-[16px] font-bold text-white py-[5px] px-[10px]">Детализация количества просмотров по типам произведений</summary>
        <div class="p-[10px]">
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них фильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfWatchedFilms</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них сериалов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfWatchedSeries</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них шоу</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfWatchedShows</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них мультфильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfWatchedCartoons</p>
        </div>
    </details>
</div>

<div class="mb-[20px]">
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Количество произведений отложенных в “смотреть позже"</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">@NumberOfPostponedMovies</p>

    <details class="bg-neutral-900 rounded-[5px] mb-[5px]">
        <summary class="text-[16px] font-bold text-white py-[5px] px-[10px]">Детализация отложенных произведений по типам</summary>
        <div class="p-[10px]">
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них фильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfPostponedFilms</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них сериалов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfPostponedSeries</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них шоу</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfPostponedShows</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Из них мультфильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@NumberOfPostponedCartoons</p>
        </div>
    </details>
</div>

<div class="mb-[20px]">
    <h2 class="text-[16px] font-bold text-white mb-[5px]">Средний рейтинг произведений</h2>
    <p class="text-[16px] font-bold text-neutral-400 bg-neutral-900 py-[5px] px-[10px] rounded-[5px] block mb-[5px]">@AverageMovieRating.ToString("F")</p>

    <details class="bg-neutral-900 rounded-[5px] mb-[5px]">
        <summary class="text-[16px] font-bold text-white py-[5px] px-[10px]">Детализация среднего рейтинга по типам произведений</summary>
        <div class="p-[10px]">
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Средний рейтинг фильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@AverageFilmRating.ToString("F")</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Средний рейтинг сериалов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@AverageSeriesRating.ToString("F")</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Средний рейтинг шоу</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@AverageShowRating.ToString("F")</p>
            <h2 class="text-[16px] font-bold text-white mb-[5px]">Средний рейтинг мультфильмов</h2>
            <p class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px]">@AverageCartoonRating.ToString("F")</p>
        </div>
    </details>
</div>

<div class="mb-[20px]">
    <details class="bg-neutral-900 rounded-[5px] mb-[5px]">
        <summary class="text-[16px] font-bold text-white py-[5px] px-[10px]">Топ-10 фильмов по рейтингу</summary>
        <div class="p-[10px]">
            <ol>
                @for (var i = 0; i < 10; i++)
                {
                    @if (i < Top10MoviesByRaiting?.Length && Top10MoviesByRaiting?[i] is not null)
                    {
                        <li class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px] list-inside">@Top10MoviesByRaiting?[i].Name (@Top10MoviesByRaiting?[i].ReleaseYear)</li>
                    }
                    else
                    {
                        <li class="text-[16px] font-bold text-neutral-400 bg-neutral-800 py-[5px] px-[10px] rounded-[5px] mb-[5px] list-inside">N/A</li>
                    }
                }
            </ol>
        </div>
    </details>
</div>

